{
  "name":         "yerbascript",
  "description":  "Unfancy CoffeeScript",
  "keywords":     ["javascript", "language", "yerbacript", "compiler", "macros"],
  "author":       "Jeremy Ashkenas",
  "version":      "0.0.1",
  "preferGlobal": true,

  "licenses":     [{
    "type":       "MIT",
    "url":        "http://github.com/wearefractal/yerbascript/raw/master/LICENSE"
  }],
  "engines":      {
    "node":       ">=0.4.0"
  },
  "directories" : {
    "lib" : "./lib/coffee-script"
  },
  "main" : "./lib/coffee-script/coffee-script",
  "bin":          {
    "yerba":     "./bin/yerba",
    "yake":      "./bin/yake"
  },
  "homepage":     "http://yerbascript.org",
  "repository":   {
    "type": "git",
    "url": "git://github.com/wearefractal/yerbascript.git"
  },
  "install": {
    "install": "cake build:parser"
  },
  "dependencies": {
    "coffee-script": "*",
    "uglify-js":  ">=1.0.0",
    "jison":      ">=0.2.0"
  }
}
